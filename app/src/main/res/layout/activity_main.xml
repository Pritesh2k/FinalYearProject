<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Main_Content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/MapBackground"
            android:layout_width="412dp"
            android:layout_height="353dp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/_background_map" />

        <Button
            android:id="@+id/Debugging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#424242"
            android:text="Debug"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/MapBackground"
            app:layout_constraintEnd_toEndOf="@+id/MapBackground"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/MapBackground"
            app:layout_constraintVertical_bias="0.855" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Map"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/MapBackground"
            app:layout_constraintEnd_toEndOf="@+id/MapBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/MapBackground" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="144dp"
            android:orientation="horizontal"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/saftey_button"
                android:layout_width="wrap_content"
                android:layout_height="139dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#BF4040"
                android:text="SAFTEY BUTTON" />

            <Button
                android:id="@+id/pop_up"
                android:layout_width="wrap_content"
                android:layout_height="139dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#3F7741"
                android:text="DISMISS ALERT" />

        </LinearLayout>

        <TextView
            android:id="@+id/NearestCrime_Header"
            android:layout_width="371dp"
            android:layout_height="35dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Nearest Recorded Crime Information"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MapBackground" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="121dp"
            android:layout_height="144dp"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            android:padding="2dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NearestCrime_Header"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible">

            <TextView
                android:id="@+id/Crime_Type_Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Crime Type" />

            <TextView
                android:id="@+id/Location_Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Location" />

            <TextView
                android:id="@+id/Longitude_Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Longitude" />

            <TextView
                android:id="@+id/Latitude_Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Latitude" />

            <TextView
                android:id="@+id/Outcome_Header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Outcome" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="247dp"
            android:layout_height="186dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical"
            android:padding="2dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/NearestCrime_Header"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/Crime_Type_Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-light"
                android:text="Crime Type"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/Location_Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-light"
                android:text="Location"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/Longitude_Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-light"
                android:text="Longitude"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/Latitude_Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-light"
                android:text="Latitude"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/Outcome_Data"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-light"
                android:text="Outcome"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/Source_Data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:fontFamily="sans-serif-light"
                android:text="Source"
                android:textAlignment="textEnd"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:id="@+id/ALERT_MESSAGE"
            android:layout_width="299dp"
            android:layout_height="119dp"
            android:background="#704545"
            android:backgroundTint="#D63333"
            android:backgroundTintMode="add"
            android:elevation="50dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:text="ATTENTION! We Have Detected A Potential Threat Near Your Location. Please Press The SAFETY Button If You DO NOT Feel Safe."
            android:textAlignment="center"
            android:textStyle="bold"
            android:translationZ="4dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/MapBackground"
            tools:visibility="invisible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>